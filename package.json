{
  "name": "@infra-blocks/docker-typescript-action-template",
  "version": "0.0.0",
  "homepage": "https://github.com/infrastructure-blocks/docker-typescript-action-template#readme",
  "bugs": {
    "url": "https://github.com/infrastructure-blocks/docker-typescript-action-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infrastructure-blocks/docker-typescript-action-template.git"
  },
  "license": "ISC",
  "author": "PhilLavoie",
  "type": "module",
  "scripts": {
    "build": "npm run clean && tsc --project tsconfig.build.json",
    "clean": "rm -rf dist",
    "compile": "tsc",
    "lint": "eslint --ext .js,.cjs,.mjs,.json,.ts --max-warnings 0 .",
    "start": "node dist/index.js",
    "test": "npm run test:unit",
    "test:coverage": "c8 npm run test",
    "test:coverage:lcov": "c8 --reporter=lcov npm run test",
    "test:unit": "mocha --config test/unit/.mocharc.cjs 'test/unit/**/*.spec.ts'"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@infra-blocks/github": "^0.11.0"
  },
  "devDependencies": {
    "@infra-blocks/test": "^0.3.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.7",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "c8": "^9.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-prettier": "^5.1.2",
    "mocha": "^10.2.0",
    "prettier": "^3.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}
